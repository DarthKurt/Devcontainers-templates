{
    "id": "cpp-cross-devcontainer",
    "version": "0.1.0",
    "name": "C++",
    "description": "Cross-platform development of C++ applications in Linux Sandbox",
    "platforms": ["C++"],
    "options": {
        "imageVariant": {
            "type": "string",
            "description": "Base environment version.",
            "enum": [
                "debian-12"
            ],
            "default": "debian-12"
        },
        "reinstallCmakeVersionFromSource": {
            "type": "string",
            "description": "Install CMake version different from what base image has already installed.",
            "enum": [
                "none",
                "4.0.2"
            ],
            "default": "4.0.2"
        },
        "reinstallLLVMVersion": {
            "type": "string",
            "description": "Install LLVM toolkit different from what base image has already.",
            "enum": [
                "none",
                "19"
            ],
            "default": "19"
        },
        "installLLVMMinGWVersion": {
            "type": "string",
            "description": "Version of LLVM-MinGW toolkit.",
            "enum": [
                "none",
                "19"
            ],
            "default": "19"
        }
    }
}